.tool-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  z-index: 9999;
}

.tool-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.tool-bar-item:active {
  background: #f0f0f0;
}

.tool-bar-icon {
  font-size: 40rpx;
  margin-bottom: 5rpx;
}

.tool-bar-text {
  font-size: 24rpx;
  color: #666;
}