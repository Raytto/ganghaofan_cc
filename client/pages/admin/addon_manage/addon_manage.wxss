page {
  background-color: #f5f5f5;
}

.addon-manage-container {
  padding: 20rpx;
}

.loading-container {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

/* 区域样式 */
.section {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  background: #f8f8f8;
  border-bottom: 1rpx solid #e5e5e5;
}

/* 附加项列表样式 */
.empty-state {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.addon-list {
  padding: 0 20rpx;
}

.addon-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.addon-item:last-child {
  border-bottom: none;
}

.addon-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.addon-name {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
}

.addon-price {
  font-size: 28rpx;
  color: #2196f3;
  font-weight: bold;
}

.addon-actions {
  display: flex;
  align-items: center;
}

.delete-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}

/* 添加表单样式 */
.add-form {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
}

.form-input:focus {
  border-color: #2196f3;
}

/* 价格输入组合 */
.price-input-group {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.price-input {
  flex: 1;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
  text-align: right;
}

.price-input:focus {
  border-color: #2196f3;
}

.price-unit {
  font-size: 28rpx;
  color: #666;
}

.price-plus-btn {
  font-size: 24rpx;
  padding: 15rpx 25rpx;
  background: #f0f0f0;
  color: #333;
}

.price-plus-btn:active {
  background: #e0e0e0;
}

/* 添加按钮 */
.add-btn {
  width: 100%;
  padding: 25rpx 0;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.add-btn[disabled] {
  background: #ccc !important;
}