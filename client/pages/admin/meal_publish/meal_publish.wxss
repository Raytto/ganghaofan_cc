/* 管理员发布餐页面样式 */
/* 参考文档: doc/client/page_meal_publish.md */

/* 基础容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.loading-content {
  background: rgba(255, 255, 255, 0.9);
  padding: 60rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
}

/* 页面头部 */
.header-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.date-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.date-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.slot-text {
  font-size: 32rpx;
  color: #666;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.status-info {
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.02);
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.status-published {
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
}

.status-locked {
  color: #FF9800;
  background: rgba(255, 152, 0, 0.1);
}

.status-completed {
  color: #2196F3;
  background: rgba(33, 150, 243, 0.1);
}

.status-canceled {
  color: #F44336;
  background: rgba(244, 67, 54, 0.1);
}

/* 餐次信息区域 */
.meal-info-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 3rpx solid #eee;
}

.meal-info {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 25rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  min-height: 50rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.view-details-btn {
  font-size: 26rpx;
  color: #2196F3;
  background: rgba(33, 150, 243, 0.1);
  border: 2rpx solid #2196F3;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  margin-left: auto;
}

/* 表单区域 */
.form-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #2196F3;
  background: #fff;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #2196F3;
  background: #fff;
}

/* 价格输入特殊样式 */
.price-input-container {
  position: relative;
}

.price-input {
  margin-bottom: 20rpx;
}

.quick-prices {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.quick-price-btn {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  border: 2rpx solid transparent;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  margin: 0;
  transition: all 0.3s ease;
}

.quick-price-btn.active {
  color: #2196F3;
  background: rgba(33, 150, 243, 0.1);
  border-color: #2196F3;
}

/* 附加项配置 */
.addons-config {
  margin-top: 20rpx;
}

.addon-item {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.addon-item:last-child {
  margin-bottom: 0;
}

.addon-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.addon-checkbox {
  font-size: 32rpx;
  margin-right: 15rpx;
  color: #2196F3;
}

.addon-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  font-weight: 500;
}

.addon-price {
  font-size: 26rpx;
  color: #666;
  background: rgba(0, 0, 0, 0.05);
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
}

.addon-quantity {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  padding: 15rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
}

.quantity-label {
  font-size: 24rpx;
  color: #666;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #2196F3;
  background: rgba(33, 150, 243, 0.1);
  border: 2rpx solid #2196F3;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
}

.quantity-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
}

.quantity-unit {
  font-size: 24rpx;
  color: #666;
}

/* 价格范围显示 */
.price-range {
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 12rpx;
  border-left: 6rpx solid #4CAF50;
}

.price-range-text {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

.price-note {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 操作按钮区域 */
.actions-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 20rpx;
  border: none;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.action-btn:last-child {
  margin-bottom: 0;
}

.action-btn.primary {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
}

.action-btn.secondary {
  background: #f0f0f0;
  color: #666;
  border: 2rpx solid #ddd;
}

.action-btn.warning {
  background: linear-gradient(135deg, #FF9800 0%, #f57c00 100%);
  color: white;
}

.action-btn.danger {
  background: linear-gradient(135deg, #F44336 0%, #d32f2f 100%);
  color: white;
}

.action-btn.success {
  background: linear-gradient(135deg, #2196F3 0%, #1976d2 100%);
  color: white;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 编辑模式按钮组 */
.edit-actions {
  display: flex;
  gap: 15rpx;
}

.edit-actions .action-btn {
  flex: 1;
  margin-bottom: 0;
}

/* 查看模式按钮组 */
.view-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.locked-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

/* 只读状态 */
.readonly-status {
  text-align: center;
  padding: 40rpx;
}

.status-message {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

/* 响应式调整 */
@media screen and (max-width: 600rpx) {
  .container {
    padding: 15rpx;
  }
  
  .header-section,
  .meal-info-section,
  .form-section,
  .actions-section {
    padding: 20rpx;
    margin-bottom: 15rpx;
  }
  
  .date-info {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
  
  .quick-prices {
    justify-content: center;
  }
  
  .addon-quantity {
    gap: 10rpx;
  }
  
  .quantity-btn {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }
}