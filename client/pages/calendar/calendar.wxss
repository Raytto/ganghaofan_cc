page {
  background-color: #f5f5f5;
}

.calendar-container {
  padding: 20rpx;
}

.calendar-header {
  text-align: center;
  padding: 20rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.current-date {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.week-header {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.week-day {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.calendar-weeks {
  background: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
}

.calendar-week {
  display: flex;
}

.calendar-day {
  flex: 1;
  margin: 2rpx;
  min-height: 180rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 10rpx 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid #e5e5e5;
}

.calendar-day.today {
  background: #e3f2fd;
  border: 2rpx solid #2196f3;
}

.day-number {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.meal-info {
  width: 100%;
  margin: 2rpx 0;
  position: relative;
  z-index: 1;
  cursor: pointer;
}

.meal-label {
  font-size: 20rpx;
  color: #666;
  display: block;
  text-align: center;
}

.meal-status {
  font-size: 18rpx;
  color: #333;
  display: block;
  text-align: center;
}

.meal-orders {
  font-size: 16rpx;
  color: #999;
  display: block;
  text-align: center;
}

.my-status {
  font-size: 16rpx;
  color: #2196f3;
  display: block;
  text-align: center;
}

.lunch {
  background: #fff3e0;
  border-radius: 4rpx;
  padding: 2rpx;
  transition: all 0.2s;
}

.lunch:active {
  opacity: 0.7;
  transform: scale(0.98);
}

.dinner {
  background: #f3e5f5;
  border-radius: 4rpx;
  padding: 2rpx;
  transition: all 0.2s;
}

.dinner:active {
  opacity: 0.7;
  transform: scale(0.98);
}