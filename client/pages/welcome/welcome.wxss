/* welcome.wxss */
.scrollarea {
  height: 100vh;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 50rpx 50rpx;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.userinfo-openid {
  color: #666;
  font-size: 24rpx;
  margin: 10rpx 0;
  word-break: break-all;
  text-align: center;
}

.welcome-message {
  margin: 60rpx 0;
  text-align: center;
}

.welcome-text {
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.5;
}

.button-container {
  width: 100%;
  margin-top: 80rpx;
}

.start-button {
  width: 80%;
  height: 88rpx;
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.start-button:hover {
  background-color: #06ad56;
}