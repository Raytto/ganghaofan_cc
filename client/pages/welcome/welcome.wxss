/* 欢迎页面样式 */
.container {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.welcome-content {
  width: 100%;
  text-align: center;
}

.user-info {
  margin-bottom: 80rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.openid {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.welcome-text {
  margin-bottom: 60rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.start-button {
  width: 300rpx;
  height: 80rpx;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.loading-container {
  background-color: #f5f5f5;
}

.loading-text {
  font-size: 32rpx;
  color: #999;
}