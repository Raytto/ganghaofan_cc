/* 注册页面样式 */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.register-content {
  width: 100%;
}

.title {
  text-align: center;
  margin-bottom: 60rpx;
}

.title text {
  font-size: 40rpx;
  font-weight: 500;
  color: #333;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

/* 头像设置 */
.avatar-section {
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  padding: 0;
  border: none;
  outline: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

/* 昵称设置 */
.nickname-section {
  margin-bottom: 60rpx;
}

.input-wrapper {
  background-color: white;
  border-radius: 10rpx;
  padding: 0 20rpx;
}

.nickname-input {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

/* 用户资料获取（兼容旧版本） */
.profile-section {
  margin-bottom: 60rpx;
  text-align: center;
}

.profile-button {
  width: 300rpx;
  height: 80rpx;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
}

/* 注册按钮 */
.register-section {
  text-align: center;
}

.register-button {
  width: 500rpx;
  height: 80rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.register-button.active {
  background-color: #1aad19;
  color: white;
}

.register-button.disabled {
  background-color: #ccc;
  color: #999;
}